@inherits Umbraco.Web.Mvc.UmbracoViewPage<Article>

@using Clean.Core.ViewModels

@{
    Layout = "master.cshtml";
}

@Html.Partial("~/Views/Partials/pageHeader.cshtml", new PageHeaderViewModel(Model.Name, Model.Title, Model.Subtitle, Model.MainImage, Model.AuthorName, Model.ArticleDate))

<article>
    @*  This adds the img-fluid class to images in the grid. You don't have to do this
        if you don't want to, you can use the line below it instead. There is a javascript
        solution for it, commented out in /scripts/clean-blog.js *@
    @Html.Raw(Html.GetGridHtml(Model, "mainContent", "Clean").ToString().Replace("<img ", "<img class=\"img-fluid\" "))
    @*@Html.GetGridHtml(Model, "mainContent", "Clean")*@
</article>